{
  "manifest_version": 3,
  "name": "Trade Manager Pro",
  "version": "3.1.3",
  "description": "Ferramenta avan√ßada para gerenciamento de trades na Pocket Option",
  "permissions": [
    "storage",
    "tabs",
    "activeTab",
    "scripting",
    "notifications",
    "offscreen",
    "commands",
    "alarms",
    "windows"
  ],
  "host_permissions": [
    "https://pocketoption.com/*"
  ],
  "action": {
    "default_popup": "src/popup/popup.html",
    "default_icon": {
      "16": "src/assets/icons/icon16.png",
      "48": "src/assets/icons/icon48.png",
      "128": "src/assets/icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://pocketoption.com/*"],
      "js": [
        "src/scripts/analyze-graph.js",
        "src/content/content.js",
        "src/scripts/index.js"
      ],
      "css": [
        "src/layout/content.css"
      ],
      "all_frames": true
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "src/layout/index.html",
        "src/layout/style.css",
        "src/layout/content.css",
        "src/scripts/*",
        "src/assets/*"
      ],
      "matches": ["https://pocketoption.com/*"]
    }
  ],
  "commands": {
    "toggle_interface": {
      "suggested_key": {
        "default": "Ctrl+Shift+Y",
        "mac": "Command+Shift+Y"
      },
      "description": "Mostrar/ocultar a interface"
    }
  }
} 